#!/bin/bash

# Run yum check-update and capture errors
errors=$(yum check-update 2>&1 >/dev/null)

# Check if there are any errors
if [[ -n "$errors" ]]; then
    # Print hostname
    echo "Hostname: $(hostname)"
    # Print kernel version
    echo "Kernel Version: $(uname -r)"
    # Print subscription-manager identity
    echo "Subscription Manager Identity: $(sudo subscription-manager identity)"
fi
